{% extends 'base.html.twig' %}

{% block title %}
  gérer-mes-adresse
{% endblock %}

{% block body %}
<a href="{{path('app_address')}}">
    <img src="{{asset('assets/img/arrow-small-left.png')}}" alt="fleche"> 
    Retour sur mes adresses</a>
  <h1 class="text-center">
   Gérer mes adresse
  </h1>
  

  
   {{ form_start(form)}}
   <div class="row">
    <div class="col-md-10">  {{ form_row(form.name) }}</div>
   <div class="col-md-5">  {{ form_row(form.firstname) }}</div>
    <div class="col-md-5">  {{ form_row(form.lastname) }}</div>
     <div class="col-md-5">  {{ form_row(form.company) }}</div>
      <div class="col-md-5">  {{ form_row(form.address) }}</div>
       <div class="col-md-5">  {{ form_row(form.postal) }}</div>
        <div class="col-md-5">  {{ form_row(form.city) }}</div>
         <div class="col-md-5">  {{ form_row(form.country) }}</div>
          <div class="col-md-5">  {{ form_row(form.phone) }}</div>
          </div> 
   {{form_end(form)}}
 
{% endblock %}
