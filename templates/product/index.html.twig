{% extends 'base.html.twig' %}

{% block title %}
  nos-produit
{% endblock %}

{% block body %}

  <div class="row">
    
    <div class="col-md-3">
      <h2>
        filtré
      </h2>
      {{form(form)}}
    </div>
    <div class="col-md-9">
      <h1 class="text-center">
        Nos produits
      </h1>
      <div class="row">
        {% for product in products %}
          <div class="col-md-4 product-container">
            <div class="product-item text-center">
              <a href="{{
                path(
                  'app_product',
                  {
                    slug: product.slug
                  }
                )
                }}">
                <img src="/uploads/{{ product.illustration }}"
                  alt="{{ product.name }}"
                  class="img-fluid" />
              </a>
              <h5>
                {{ product.name }}
              </h5>
              <span class="product-subtitle">{{ product.subtitle }}</span>
              <span class="product-price">
                {{ (product.price / 100)|number_format(2, '.', ',') }}€
              </span>
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
  
{% endblock %}
